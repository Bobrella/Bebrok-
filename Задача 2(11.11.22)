using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp6
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string exit;
            do
            {

                Console.WriteLine("Введите слово:");
                exit = Console.ReadLine();
            }
            while (exit != "stop");
        }
    }
}
